# API v1 Specific Configuration

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/v1/
    
    # Remove .php extension from URLs (optional)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^([^/]+)/?$ $1.php [L,QSA]
</IfModule>

# Security: Prevent direct access to base.php
<Files "base.php">
    Order allow,deny
    Deny from all
</Files>

# Allow access to endpoint files
<FilesMatch "^(reports|items|webhooks|health)\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>

